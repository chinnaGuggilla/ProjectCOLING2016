$(".menu > li").click(function(e){
	switch(e.target.id){
	case "tab1":
		$("#tab1").addClass("active");
		$("#tab2").removeClass("active");
		$("div.tab1").fadeIn();
		$("div.tab2").css("display", "none");
	break;
	case "tab2":
		$("#tab1").removeClass("active");
		$("#tab2").addClass("active");
		$("div.tab2").fadeIn();
		$("div.tab1").css("display", "none");
	}
});


